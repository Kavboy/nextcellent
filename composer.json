{
  "name": "kavboy/nextcellent-fork",
  "description": "Fork of the Nextcellent Gallery wordpress plugin",
  "minimum-stability": "stable",
  "license": "GPL-2.0",
  "require": {
    "php": "^5.4|^7|^8"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "squizlabs/php_codesniffer": "^3.5",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "wp-coding-standards/wpcs": "^2.3",
    "slowprog/composer-copy-file": "^0.3.3"
  },
  "scripts": {
    "build": [
      "@lint-php",
      "@lint-js",
      "@npm"
    ],
    "build-no-lint": [
      "@npm"
    ],
    "lint-php": [
      "phpcbf --standard=phpcs.xml ./src"
    ],
    "lint-js": [
      "eslint --fix public/js",
    ],
    "npm": [
      "npm run build"
    ]
  }
}
